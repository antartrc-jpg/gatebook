services:
  api:
    build: ../api
    ports: ["8080:8080"]
    restart: unless-stopped

  web:
    image: nginx:alpine
    volumes:
      - ../web:/usr/share/nginx/html:ro
    ports: ["5173:80"]
    restart: unless-stopped

  db:
    image: postgres:16
    environment:
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: gatebook
    ports: ["5432:5432"]
    volumes:
      - pgdata:/var/lib/postgresql/data
    restart: unless-stopped

  minio:
    image: minio/minio
    command: server /data --console-address ":9001"
    environment:
      MINIO_ROOT_USER: admin
      MINIO_ROOT_PASSWORD: admin123456
    ports: ["9000:9000","9001:9001"]
    volumes: ["minio:/data"]
    restart: unless-stopped

  redis:
    image: redis:7
    ports: ["6379:6379"]
    restart: unless-stopped

 mailpit:
    image: axllent/mailpit
    ports: ["8025:8025","1025:1025"]   # <— 1025 ergänzen
    restart: unless-stopped

volumes:
  pgdata:
  minio:
